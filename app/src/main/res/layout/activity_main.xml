<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/sparks_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"

        android:layout_marginBottom="5dp"
        android:textSize="15dp"
        android:text="The Sparks Foundation"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

        android:layout_gravity="center"
        android:textAlignment="center"

        android:text="Welcome Back!"
        android:textColor="@color/white"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/voidname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:background="@drawable/input_back"
        android:padding="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:hint="Name"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"

        />
    <EditText
        android:id="@+id/voidemail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:background="@drawable/input_back"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="8dp"
        android:hint="Email"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"

        />
    <Button
        android:id="@+id/voidsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in "
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="40dp"
        android:textSize="15dp"
        android:background="@drawable/buttoon_back"
/>




   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
       android:orientation="vertical"
       >


       <Button
           android:id="@+id/google"
           android:layout_width="150dp"
           android:layout_height="40dp"
           android:background="@drawable/buttoon_back"
           android:layout_gravity="center"
           android:textSize="15dp"
           android:layout_margin="5dp"
           android:drawableLeft="@drawable/google"

           android:text="sign in"
            android:padding="5dp"
           android:textAllCaps="false"
           />

       <Button
           android:id="@+id/facebook"
           android:layout_width="150dp"
           android:layout_height="40dp"
           android:layout_margin="5dp"
           android:layout_gravity="center"
           android:textSize="15dp"
           android:layout_weight="1"
           android:text="facebook"
           android:textColor="#3E5ED1"
           android:padding="5dp"
           android:textAllCaps="false"
           android:drawableLeft="@drawable/fb"
           android:background="@drawable/buttoon_back"/>


   </LinearLayout>


</LinearLayout>
</RelativeLayout>